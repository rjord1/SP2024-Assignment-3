@model IEnumerable<SP2024_Assignment_3.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="mainmovieTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMG)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.IMDB)" target="_blank">IMDB Link</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
                <td>
                    @if (item.IMG != null && item.IMG.Length != 0)
                    {
                        <img height="150" src="@Url.Action("GetMoviePhoto", "Movies", new {item.Id})" />
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
